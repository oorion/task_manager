<h1>Create a New Task</h1>
<%= form_for :task, url: list_tasks_path do |f| %>
  <%= f.text_field :title, placeholder: "Title" %><br/>
<%= f.text_area :description, placeholder: "Description" %></br>
  <%= f.label :due_date %>
  <%= f.date_field :due_date %><br/>
  <%= f.submit "Create Task" %>
<% end %>
